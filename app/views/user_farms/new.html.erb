<%= form_for (@farm), url: {action: "create"} do |f| %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div> 

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div> 

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, size: "60x12" %>
  </div> 
  
  <%= f.submit "Create" %>
<% end %>

 