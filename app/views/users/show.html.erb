<% @products.each do |product| %>
	<input type="checkbox" data-category= "Product" name= "<%= product.name %>" id="<%= product.name %>" value="<%= product.id %>"
	class="js-filter-box">
	<label for="<% product.name %>"> <%= product.name %> </label>
<% end %>
<br>
<% @practices.each do |practice| %>
	<input type="checkbox" data-category= "Practice" name= "<%= practice.name %>" id="<%= practice.name %>" value="<%= practice.id %>"
	class="js-filter-box">
	<label for="<% practice.name %>"> <%= practice.name %> </label>
<% end %>
<br>
<% @purchase_options.each do |purchase_option| %>
	<input type="checkbox" data-category= "PurchaseOption" name= "<%= purchase_option.name %>" id="<%= purchase_option.name %>" value="<%= purchase_option.id %>"
	class="js-filter-box">
	<label for="<% purchase_option.name %>"> <%= purchase_option.name %> </label>
<% end %>
<br>

<script type="text/javascript">
$(document).ready(function(){

$( ".js-filter-box" ).click(function() {

	var filterId = $(this).data("value");
	var allfilterIds = {PurchaseOption:[],
						Practice:[],
					    Product:[]}
		$('.js-filter-box:checked').each(function(index, element){
			var filterId = parseInt($(element).attr("value"))
			var category = $(element).attr("data-category")
			allfilterIds[category].push(filterId)
		})

		$.ajax({
			type: "POST",
			url: "/api/farms",
			data: allfilterIds,
			success: farm_markers,
			error: handleError
		});

	console.log(allfilterIds)


});

