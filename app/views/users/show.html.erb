		}, function(){
			map = handler.getMap();

			if(navigator.geolocation)
				navigator.geolocation.getCurrentPosition(displayOnMap);

			$.ajax({
				type: "GET",
				url: "/api/farms",
				success: farm_markers,
				error: handleError
			});	
	});

